{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // ${workspaceFolderBasename}/${relativeFileDirname}/${fileBasename}
    // https://github.com/golang/vscode-go/wiki/debugging
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cd ${fileDirname} ; go build -o ${fileDirname}/../bin/main.exe ${fileDirname}",
            // "command": "go build -o ${fileDirname}/../bin/main.exe ${file}; ${fileDirname}/../bin/main.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },      
            "isBackground": true,    
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
              },

            "problemMatcher": {
                "base": "$go",
                "background": {
                  "activeOnStart": true,
                  "beginsPattern": ".*",
                  "endsPattern": "[.*]",  
                                
                }
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "cd ${fileDirname}/../bin ; .${pathSeparator}main.exe",         
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOrder": "parallel",
            "problemMatcher": ["$go"],
            "dependsOn":"build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
              }
        }
      
    ]
}