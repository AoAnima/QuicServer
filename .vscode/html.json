		"body":[			
			"<div class=\"панель\"> \n <div class=\"заголовок-панели\">\n ${1:ЗаголовокПанели} \n</div> \n<div class=\"контент-панели отступ-внутр-10\" >\n <section class=\"строка влево\" id=\"section-${2:ИдСекции}\">\n $0 \n </section> \n</div>\n</div>"
			
		]
	}
}
